(defshards window-with-panels []
  (UI.Window
   :Title "Window with Panels"
   :Contents
   (-> (UI.TopPanel
        (->
         "Top Window Panel" (UI.Label)))
       (UI.BottomPanel
        (->
         "Bottom Window Panel" (UI.Label)))
       (UI.LeftPanel
        (->
         "Left Window Panel" (UI.Label)))
       (UI.RightPanel
        (->
         "Right Window Panel" (UI.Label)))
       (UI.CentralPanel
